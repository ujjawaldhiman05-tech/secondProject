<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-gray-50 min-h-screen flex items-center justify-center p-6">
    <%- include("../partials/header") %>
    <div
      class="w-full max-w-2xl bg-white shadow-lg rounded-2xl overflow-hidden"
    >
      <!-- Header -->
      <div class="bg-indigo-600 text-white px-6 py-4">
        <h1 class="text-2xl font-semibold">
          <%= editing ?" Edit" : "Add" %> a Home
        </h1>
        <p class="text-indigo-100 text-sm">Enter details to list a new home</p>
      </div>
      <!-- Form Section -->
      <form
        action='<%= editing ? "/host-edit-home" : "/host-addHome" %>'
        method="post"
        class="p-6 space-y-6"
      >
        <input
          type="hidden"
          name="id"
          value='<%= editing ? homeData.id : " " %>'
        />
        <!-- Name -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1"
            >Home Name</label
          >
          <input
            type="text"
            id="name"
            name="houseName"
            value='<%= editing ? homeData.houseName : " " %>'
            required
            placeholder="Example: Cozy Lake View Villa"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-400 focus:outline-none"
          />
        </div>

        <!-- Location -->
        <div>
          <label
            for="location"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Location</label
          >
          <input
            type="text"
            id="location"
            name="location"
            value='<%= editing ? homeData.location : " " %>'
            required
            placeholder="City or Area"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-400 focus:outline-none"
          />
        </div>

        <!-- Price and Rating -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label
              for="price"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Price per Night (â‚¹)</label
            >
            <input
              type="number"
              id="price"
              name="price"
              required
              value='<%=  editing ? homeData.price : " " %>'
              min="0"
              placeholder="2500"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-400 focus:outline-none"
            />
          </div>

          <div>
            <label
              for="rating"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Rating (0.0 - 5.0)</label
            >
            <input
              type="number"
              id="rating"
              name="rating"
              required
              value='<%= editing ? homeData.rating : " " %>'
              min="0"
              max="5"
              step="0.1"
              placeholder="4.5"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-400 focus:outline-none"
            />
          </div>
        </div>

        <!-- Photo Upload -->
        <div>
          <label
            for="photo"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Photo</label
          >
          <input
            type="text"
            id="photo"
            name="photoUrl"
            value="continue"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 cursor-pointer focus:ring-2 focus:ring-indigo-400 focus:outline-none"
          />
        </div>

        <!-- Submit Button -->
        <div class="pt-4 border-t border-gray-200">
          <button
            type="submit"
            class="w-full bg-indigo-600 text-white py-2.5 rounded-lg font-medium hover:bg-indigo-700 transition"
          >
            <%= editing ? "Update Home" : "Add Home" %>
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
