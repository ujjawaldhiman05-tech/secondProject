<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>
  <body class="bg-gray-50">
    <!-- Header/Navbar -->
    <%- include("../partials/header") %>

    <!-- Hero Section -->
    <section class="pt-24 md:pt-32 pb-16 md:pb-24 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div class="space-y-6">
            <h1
              class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900"
            >
              Your Next Home Awaits
            </h1>
            <p class="text-lg md:text-xl text-gray-600">
              Explore thousands of rental listings across top cities. Compare
              prices, check amenities, and move into a place that truly feels
              like home ‚Äî all with ease and confidence.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                type="button"
                href="/host-addHome"
                class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
              >
                Get Started
              </a>
            </div>
          </div>
          <div class="hidden md:block">
            <!-- Placeholder for hero image -->
            <div
              class="aspect-video rounded-xl flex items-center justify-center"
            >
              <img
                src="/images/heroSection.webp"
                alt=""
                class="w-full rounded-xl"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- homes cards -->
    <section class="mb-[50px]">
      <div class="flex flex-wrap justify-center gap-8 max-w-6xl w-full mx-auto">
        <% homeDetails.forEach((element)=>{ %>
        <div
          class="w-full sm:w-[45%] lg:w-[30%] bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
        >
          <img src="/images/heroSection.webp" " alt="Home Photo" class="h-56
          w-full object-cover" />
          <div class="p-5 space-y-2">
            <h2 class="text-2xl font-semibold text-gray-800">
              <%= element.houseName %>
            </h2>
            <p class="text-gray-500 text-sm">üìç<%= element.location %></p>
            <div class="flex items-center justify-between pt-2">
              <p class="text-indigo-600 font-semibold text-lg">
                ‚Çπ<%= element.price %>
                <span class="text-gray-500 text-sm">/night</span>
              </p>
              <p
                class="bg-yellow-400 text-white text-sm px-2 py-1 rounded-md font-medium"
              >
                ‚≠ê <%= element.rating %>
              </p>
            </div>
            <button
              class="bg-indigo-600 hover:bg-indigo-700 active:scale-95 text-white font-semibold py-2 px-8 rounded-lg shadow-md transition transform focus:outline-none mt-3 focus:ring-2 focus:ring-indigo-300"
            >
              Book
            </button>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
  </body>
</html>
